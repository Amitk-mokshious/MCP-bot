{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacks": {
      "buildCommand": "cd mcp-server && pip install -r requirements.txt",
      "startCommand": "cd mcp-server && uvicorn server:app --host 0.0.0.0 --port $PORT"
    }
  },
  "deploy": {
    "numReplicas": 1,
    "healthcheckPath": "/health",
    "restartPolicy": {
      "maxRetries": 10
    }
  }
}
